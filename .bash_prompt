PS1="\[${CYAN}\]\u \[$BASE0\]at \[$YELLOW\]\h \[$BASE0\]in \[$BLUE\]\w\[$BASE0\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \")\[$MAGENTA\]\$(parse_git_branch)\[$BASE0\]\n→ \[$RESET\]"



